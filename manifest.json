{
  "manifest_version": 3,
  "name": "Screen Monitor Pro",
  "version": "2.0",
  "description": "Auto capture screen every 15 min & upload with timer",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Monitor"
  },
  "permissions": [
    "desktopCapture",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://extensions-screen.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["static/*"],
    "matches": ["<all_urls>"]
  }]
}